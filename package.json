{
  "name": "tslint-config-clicknow",
  "version": "0.0.0-semantically-released",
  "description": "TSLint shareable config for ClickNow",
  "keywords": [
    "tslint",
    "tslintconfig",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce"
  ],
  "homepage": "https://github.com/cknow/tslint-config-clicknow",
  "bugs": {
    "url": "https://github.com/cknow/tslint-config-clicknow/issues",
    "email": "ricardo@clicknow.com.br"
  },
  "license": "MIT",
  "author": {
    "name": "Ricardo Gobbo de Souza",
    "email": "ricardogobbosouza@yahoo.com.br",
    "role": "Developer"
  },
  "files": [
    "index.js",
    "rules"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cknow/tslint-config-clicknow"
  },
  "scripts": {
    "commit": "git-cz",
    "watch": "nodemon --exec npm t",
    "lint": "eslint index.js rules/ test/",
    "pretest": "npm run lint",
    "test": "npm run cover",
    "postest": "npm run check-coverage",
    "cover": "nyc --reporter lcov --reporter text ava",
    "check-coverage": "nyc check-coverage --global 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm t"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.4.0",
    "eslint-config-clicknow": "^1.6.1",
    "eslint-plugin-ava": "^3.0.0",
    "ghooks": "^1.3.2",
    "nodemon": "^1.10.2",
    "nyc": "^8.1.0",
    "semantic-release": "^4.3.5",
    "tslint": "^3.15.1",
    "typescript": "^1.8.10"
  },
  "peerDependencies": {
    "tslint": ">=3.15",
    "typescript": ">=1.8"
  },
  "engines": {
    "node": ">=4"
  },
  "preferGlobal": false,
  "private": false
}
